---
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<div
  class="max-w-2xl mx-auto p-6 bg-white dark:bg-neutral-900 rounded-xl shadow-lg transform transition-all hover:scale-105 duration-300"
>
  <blockquote
    class="text-2xl font-semibold text-gray-900 dark:text-gray-100 text-center font-playfair italic"
  >
    "{text}"
  </blockquote>
</div>
